<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- CardView 배경색 -->
            <corners android:radius="48dp" /> <!-- 모서리 반경 (CardView와 동일) -->
        </shape>
    </item>

    <!-- 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#F6F4EC" /> <!-- 검정 테두리 -->
            <corners android:radius="48dp" /> <!-- 모서리 반경 (CardView와 동일) -->
        </shape>
    </item>
</layer-list>
